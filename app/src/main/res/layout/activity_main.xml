<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grass"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/ghanachocolate"
            android:text="야구장 자리 Review"
            android:textColor="#FFF"
            android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/user_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text=""
            android:textSize="20sp" />

        <Button
            android:id="@+id/logout_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="15dp"
            android:backgroundTint="@color/grass"
            android:text="로그아웃"
            android:textColor="#FFF"/>


    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="0,1,2">

        <TableRow>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/NC_Btn"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/changwon" />
                <!-- 이미지 출처 : https://www.ncdinos.com/dinos/stadium.do -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ghanachocolate"
                    android:text="창원 NC 파크"
                    android:textColor="#00008C"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/Jamsil_Btn"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/jamsil" />
                <!-- 이미지 출처 : 위키백과-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ghanachocolate"
                    android:text="잠실야구장"
                    android:textColor="#4AB34A"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/KT_Btn"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/suwon" />

                <!-- 출처 : http://ko.yagongso.wikidok.net/wp-d/597dd70b5bf454ea4b5c74be/View -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ghanachocolate"
                    android:text="수원  ktwiz 파크"
                    android:textColor="#000000"
                    android:textSize="15sp" />
            </LinearLayout>
        </TableRow>

        <TableRow>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/Kiwoom_Btn"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/gocheok" />
                <!-- 이미지 출처 : http://ko.yagongso.wikidok.net/wp-d/593991106ee7b0a1265f441e/View -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ghanachocolate"
                    android:text="고척스카이돔"
                    android:textColor="#800000"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/KIA_Btn"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/gwangju" />
                <!-- 이미지 출처 : http://ko.yagongso.wikidok.net/wp-d/5956109c22c9cbfe4abbb293/View -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ghanachocolate"
                    android:gravity="center"
                    android:text="광주 기아\n챔피언스 필드"
                    android:textColor="#CD0000"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/Lotte_Btn"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/busan" />

                <!-- 이미지 출처 : https://namu.wiki/w/%EC%82%AC%EC%A7%81%20%EC%95%BC%EA%B5%AC%EC%9E%A5 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ghanachocolate"
                    android:text="부산사직야구장"
                    android:textColor="#14148C"
                    android:textSize="15sp" />
            </LinearLayout>
        </TableRow>

        <TableRow>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/Samsung_Btn"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/dague" />
                <!-- 이미지 출처 : https://namu.wiki/w/%EB%8C%80%EA%B5%AC%20%EC%82%BC%EC%84%B1%20%EB%9D%BC%EC%9D%B4%EC%98%A8%EC%A6%88%20%ED%8C%8C%ED%81%AC?from=%EB%9D%BC%EC%9D%B4%EC%98%A8%EC%A6%88%20%ED%8C%8C%ED%81%AC -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ghanachocolate"
                    android:gravity="center"
                    android:text="대구 삼성 \n 라이온즈 파크"
                    android:textColor="#0000FF"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/SSG_Btn"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/incheon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ghanachocolate"
                    android:gravity="center"
                    android:text="인천 SSG\n랜더스 필드"
                    android:textColor="#FF0000"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/Hanhwa_Btn"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:background="@drawable/dajeon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ghanachocolate"
                    android:gravity="center"
                    android:text="대전 한화생명\n이글스 파크"
                    android:textColor="#FF9100"
                    android:textSize="15sp" />
            </LinearLayout>
        </TableRow>
    </TableLayout>

</LinearLayout>